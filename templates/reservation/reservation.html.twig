{% extends 'base.html.twig' %}

{% block title %}Bogoss Barber - Reservations
{% endblock %}

{% block body %}

	<body>

		<div class="text-white font-semibold flex flex-wrap gap-[3%] text-2xl sm:text-xl py-7 pb flex justify-center border bg-black pt-7 pb-7">

			<a id="hover" href="{{path('app_main')}}">Accueil</a>
			<a id="hover" href="{{path('app_produits')}}">Tous nos produits</a>
			{% if app.user %}
				{% if "ROLE_Admin" in app.user.roles %}
					<a id="hover" href="{{path('admin')}}">Admin</a>
				{% endif %}
				<a id="hover" href="">Profil</a>
				<a id="hover" href="{{path('app_logout')}}">Deconnexion</a>
			{% else %}
				<a id="hover" href="{{path('app_login')}}">Connexion</a>
			{% endif %}
			<a id="hover" href="">Panier</a>
			<a id="hover" href="">Contact</a>

		</div>

		<div class="text-2xl font-semibold text-center pt-4">Reservations</div>

		<p class="text-lg font-semibold pb-4 pt-4">Veuillez choisir la prestation que vous souhaitez : </p>

		{% for key, sub in subServices %}
			<h2 class="text-lg pb-4 pt-4 font-semibold text-xl">{{ key }}</h2>

			{% for subsub in sub %}
				<div class="pb-4 pt-4 flex -flex row">
					{{ subsub.name }} |
					<div class="pl-4 flex flex-row">
					{{subsub.duration}}min -
					{{subsub.price}} â‚¬
					
		<div class="pl-4">
		<a href="{{ path('app_reservation_detail', { 'id': subsub.id }) }}">
					<button class="border rounded-lg bg-black text-white px-1 py-1 pl-[5%]">Choisir</button>
					</a>
					</div>
					</div>
					<br/>
				</div>
			{% endfor %}

		{% endfor %}


	</body>

{% endblock %}
