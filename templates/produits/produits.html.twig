{% extends 'base.html.twig' %}

{% block title %}Bogoss Barber - Nos produits{% endblock %}

{% block body %}

<img src="{{asset('images/logobarber.png')}}" class="h-[100px] w-[100px] absolute ml-[20%]" alt="Logo bike life"/>
		<header class="flex flex-col bg-contain bg-no-repeat md:bg-no-repeat bg-cover py-96 container mx-auto gap-[60px] border-2" style="background-image:url('{{asset('images/produits.avif')}}')">

			<div class="text-white font-semibold gap-[3%] text-2xl pb flex justify-center">

				<a id="hover" href="{{path('app_main')}}">Accueil</a>
				<a id="hover" href="{{path('app_produits')}}">Tous nos produits</a>
				{% if app.user %}
					<a id="hover" href="{{path('app_logout')}}">Deconnexion</a>
				{% else %}
					<a id="hover" href="{{path('app_login')}}">Connexion</a>
				{% endif %}
				<a id="hover" href="">Contact</a>

			</div>
			<div class="border border-solid border-[#9f7150] border-2 bg-gray-600 opacity-[70%] w-[60%] py-4 ml-[18%]">
				<h1 class="text-white text-5xl text-center font-semibold ">Nos produits</h1>
			</div>
		</header>

        <h2 class="text-center text-xl font-semibold pt-[2%] pb-[2%]">Nos produits ({{produits | length}})</h2>

        <div class="max-sm:flex-col w-[150%] items-ceneter md:flex md:flex-wrap container mx-auto pt-6 gap-6 flex justify-center">
			{% for produit in produits %}
				<div class="w-1/4 bg-[#D5CABC] border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
					<a href="{{path('app_produit', {id: produit.id})}}">
						<div class="zoom-image"><img class="w-full h-[200px]" src="{{asset(produit.image)}}" alt=""/></div>
					</a>
					<div class="p-5">
						<a href="#">
							<h5 class="mb-2 text-2xl font-bold tracking-tight text-black dark:text-white">{{produit.nom}}</h5>
						</a>
						<p class="max-sm:hidden mb-3 font-normal text-gray-100 dark:text-gray-400">{{produit.description}}</p>
						<div class="flex flex-row justify-between">
						<a href="#" class="inline-flex font-semibold items-center px-3 py-2 text-sm font-medium text-center text-white bg-black rounded-lg hover:bg-[#0B9C9F] focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
							{{produit.prix}}€
							<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 10">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
							</svg>
						</a>
						{# <a href="#"><img src="{{asset('images/iconlike.png')}}" alt="favoris"></a> #}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

        <footer class="bg-[#9f7150] rounded-lg shadow m-4 dark:bg-gray-800">
			<div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
				<span class="text-sm text-white sm:text-center dark:text-gray-400">© 2023
					<a href="https://flowbite.com/" class="hover:underline">Flowbite™</a>. All Rights Reserved.
				</span>
				<ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-white dark:text-gray-400 sm:mt-0">
					<li>
						<a href="#" class="hover:underline me-4 md:me-6">About</a>
					</li>
					<li>
						<a href="#" class="hover:underline me-4 md:me-6">Privacy Policy</a>
					</li>
					<li>
						<a href="#" class="hover:underline me-4 md:me-6">Licensing</a>
					</li>
					<li>
						<a href="#" class="hover:underline">Contact</a>
					</li>
				</ul>
			</div>
		</footer>

{% endblock %}
