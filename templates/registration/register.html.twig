{% extends 'base.html.twig' %}

{% block title %}Bogoss Barber - Inscription{% endblock %}

{% block body %}
    <body class="bg-white container mx-auto">

    <div class="pl-[20%]">
				<div class=" h-[500px] bg-no-repeat container mx-auto pl-[15%]" style="background-image:url('{{asset('images/register.jpg')}}')"></div>
			</div>

    <h1 class=" text-2xl uppercase text-center text-gray-800 pt-[1%] font-semibold">Inscription</h1>

	<div class="pt-[3%] mb-[15%] pl-[43%] ">
		

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
        <div class="mb-5">

			{{ form_widget(registrationForm.pseudo) }}
		</div>
		<div class="mb-5">

			{{ form_widget(registrationForm.email) }}
		</div>
		<div class="mb-5">
			{{ form_widget(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
		</div>
		<div class="mb-5 text-black">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		<button style="color:white;" type="submit" class="btn w-[30%] text-white bg-[#9f7150] rounded-xl">S'inscrire</button>
		{{ form_end(registrationForm) }}
	</div>

    </body>
{% endblock %}
